            android:windowSoftInputMode="adjustResize"
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GlavniActivity"
            android:label="@string/title_activity_glavni" >
        </activity>
        <activity
            android:name=".PregledVozilaActivity"
            android:label="@string/title_activity_pregled_vozila" >
        </activity>
        <activity
            android:name=".Moje_rezervacije"
            android:label="@string/title_activity_moje_rezervacije" >
        </activity>
        <activity
            android:name=".Nova_rezervacija"
            android:label="@string/title_activity_nova_rezervacija" >
        </activity>
        <activity
            android:name=".NovaRezervacijaAutomobil"
            android:label="@string/title_activity_nova_rezervacija_automobil" >
        </activity>
        <activity
            android:name=".Glavni_activity"
            android:label="@string/title_activity_glavni_activity" >
        </activity>
        <activity
            android:name=".Uslovi_koristenja"
            android:label="@string/title_activity_uslovi_koristenja" >
        </activity>
    </application>

</manifest>
