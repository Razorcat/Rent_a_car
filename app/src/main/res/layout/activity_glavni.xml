<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ba.fit.rent_a_car.app.GlavniActivity"
    android:background="#ff17d7ff"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true">

  <!--   <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <TextView
        android:id="@+id/txtDobrodosao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moje rezervacije"
        android:id="@+id/btn_MojeRezervacije"
        android:layout_below="@+id/txtDobrodosao"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="117dp"
        android:layout_alignRight="@+id/txtDobrodosao"
        android:onClick="btnLogin_onClick"
        android:layout_alignEnd="@+id/txtDobrodosao" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova rezervacija"
        android:layout_centerInParent="true"
        android:id="@+id/btn_NovaRezervacija"
        android:layout_below="@+id/btn_MojeRezervacije"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_MojeRezervacije"
        android:layout_alignEnd="@+id/btn_MojeRezervacije" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregled dostupnih vozila"
        android:id="@+id/btnPregledDostupnihVozila"
        android:layout_below="@+id/btn_NovaRezervacija"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:onClick="btnLogin_onClick"
        android:layout_alignParentStart="true" />
</RelativeLayout>
